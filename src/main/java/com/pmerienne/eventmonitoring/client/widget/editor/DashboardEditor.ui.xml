<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:e="urn:import:com.pmerienne.eventmonitoring.client.widget.editor">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<form class="form-horizontal">
			<fieldset>
				<e:TextInput ui:field="nameInput" required="true" label="Name" />
				<e:TextAreaInput ui:field="descriptionInput" required="true" label="Description" />					
				
				<!-- Graph configurations -->
				<g:HTMLPanel ui:field="configurationsContainer" />
				
				<div class="well">
					<g:Button ui:field="addGraphButton" addStyleNames="btn">
						<i class="icon-signal"/>
						Add graph
					</g:Button>
					<g:Button ui:field="addTableButton" addStyleNames="btn">
						<i class="icon-list-alt"/>
						Add table
					</g:Button>
				</div>
			</fieldset>
		</form>
	</g:HTMLPanel>
</ui:UiBinder>