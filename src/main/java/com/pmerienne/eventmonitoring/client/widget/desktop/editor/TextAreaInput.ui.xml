<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	</ui:style>

	<g:HTMLPanel addStyleNames="control-group">
		<label ui:field="label" class="control-label" />
		<div class="controls">
			<g:TextArea ui:field="input" visibleLines="5" width="95%"/>
			<span ui:field="error" class="help-inline" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder>