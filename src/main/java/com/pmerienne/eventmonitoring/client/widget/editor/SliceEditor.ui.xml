<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:v="urn:import:com.pmerienne.eventmonitoring.client.widget" xmlns:e="urn:import:com.pmerienne.eventmonitoring.client.widget.editor">
	<ui:style>
		.header {
			height: 30px;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.header}">
			<g:Button ui:field="removeButton" addStyleNames="pull-right btn">
				<i class="icon-minus"/>
				Remove
			</g:Button>
			<h3 ui:field="sliceTitle">New slice</h3>
		</div>
		<form class="form-horizontal">
			<fieldset>
				<g:HorizontalPanel>
					<g:HTMLPanel>
						<e:TextInput ui:field="nameInput" required="true" label="Name"/>
						<e:ProjectionInput ui:field="projectionInput" required="true" label="Projection"/>
					</g:HTMLPanel>

					<e:ColorInput ui:field="colorInput" required="false" label="Color (ex :#AEAEAE)" />
				</g:HorizontalPanel>

				<e:CriteriaInput ui:field="criteriaInput"/>
			</fieldset>
		</form>
		<hr />

	</g:HTMLPanel>
</ui:UiBinder> 